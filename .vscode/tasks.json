{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // C++ 컴파일
        {
            "label": "g++ build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${fileDirname}\\**.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
            ],
            "problemMatcher": ["$gcc"],
            "group": "build"
        },
        //c 컴파일
        {
            "label": "gcc build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${fileDirname}\\**.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
            ],
            "problemMatcher": ["$gcc"],
            "group": "build"
        },
        // 실행
        {
            "label": "execute",
            "command" : "cmd",
            "group" : "test",
            "args": [
                "/C", "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ]
        }
    ]
}